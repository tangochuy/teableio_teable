{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "composite": true,
    "sourceMap": true,
    "incremental": true
  },
  "references": [
    { "path": "../core" },
    { "path": "../ui-lib" },
    { "path": "../icons" },
    { "path": "../openapi" }
  ],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["./src"]
}
