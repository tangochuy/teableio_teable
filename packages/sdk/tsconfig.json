{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "composite": true,
    "sourceMap": true,
    "incremental": true,
    "paths": {
      "@teable-group/core": ["../../../packages/core/src/index"],
      "@teable-group/ui-lib": ["../../../packages/ui-lib/src/index"],
      "@teable-group/icons": ["../../../packages/icons/src/index"],
      "@teable-group/openapi": ["../../../packages/openapi/src/index"]
    },
    "types": ["@testing-library/jest-dom/types"]
  },
  "exclude": ["**/node_modules", "**/.*/", "./dist", "./coverage"],
  "include": ["src"]
}
