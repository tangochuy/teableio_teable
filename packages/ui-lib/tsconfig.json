{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "rootDir": "../",
    // "jsxImportSource": "@emotion/react",
    "noEmit": false,
    "incremental": true,
    "composite": true,
    "paths": {
      "@teable/icons": ["../icons/src"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["./src", "../icons/src"]
}
