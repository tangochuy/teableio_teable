{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "rootDir": "../../packages",
    // "jsxImportSource": "@emotion/react",
    "noEmit": false,
    "incremental": true,
    "composite": true,
    "paths": {
      "@teable-group/icons": ["../icons/src"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build", "@teable-group/icons"],
  "include": ["src", "../icons/src"]
}
