{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "rootDir": "./src",
    // "jsxImportSource": "@emotion/react",
    "noEmit": false,
    "incremental": true,
    "composite": true,
    "paths": {
      "@teable-group/icons": ["../../../packages/icons/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"],
  "include": ["./src"]
}
